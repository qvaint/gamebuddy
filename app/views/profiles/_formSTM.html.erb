<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %> <!-- profile errors any -->
   
  <%= f.number_field :steam, :value => 1, class: "hidden" %>
  
  <div class="form-group">
    <%= f.label :steamName, "What's your Steam ID?" %>
    <%= f.text_field :steamName, class: "form-control" %>
    <i> (http://steamcommunity.com/id/__________)</i>
  </div>
  <br />
  <div class="form-group">
    <%= f.label :steamDescription, "Anything you want to add to your profile?" %>
    <%= f.text_field :steamDescription, class: "form-control" %>
    <i> (games you want to play, if you have a microphone, times you like to play, etc.)</i>
  </div>

    <br />
  <div class="panel-footer center">
    <div class="form-group">
      <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>
